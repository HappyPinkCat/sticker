{  
  "manifest_version": 3,  
  "name": "Emoji Recommendation Extension",  
  "version": "1.0",  
  "description": "一个根据输入文字推荐表情包的Chrome插件。",  
  "permissions": ["activeTab"],  
  "action": {  
    "default_popup": "popup.html",  
    "default_icon": "icon.png"  
  },  
  "background": {  
    "service_worker": "background.js"  
  }  
}
